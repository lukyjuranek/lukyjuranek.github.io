---
import { Image } from 'astro:assets';
import aroaImg from '../assets/img/aroa.png';
import bluebeeImg from '../assets/img/bluebee.png';

interface Props {
  href: string;
  src: string;
  title: string;
  text: string;
}

const { href, src, title, text } = Astro.props;

// Map image paths to imported images
const imageMap: Record<string, ImageMetadata> = {
  '/img/aroa.png': aroaImg,
  '/img/bluebee.png': bluebeeImg,
};

const image = imageMap[src];
---

<div class="flex flex-col lg:flex-row max-w-5xl transition duration-500 ease-in-out transform hover:scale-[1.02]">
  <div class="flex-[3]">
    <a href={href}>
      {image ? (
        <Image 
          src={image} 
          alt={`${title} platform screenshot`} 
          class="w-full h-auto rounded-lg project-card-shadow"
          loading="lazy"
        />
      ) : (
        <img 
          src={src} 
          alt={`${title} platform screenshot`} 
          class="w-full rounded-lg project-card-shadow"
          loading="lazy"
        />
      )}
    </a>
  </div>
  <div class="flex-[4] p-6 lg:rounded-tr-lg lg:rounded-br-lg rounded-bl-lg rounded-br-lg lg:rounded-bl-none">
    <h2 class="text-2xl font-medium text-white mb-4">{title}</h2>
    <p class="text-gray-400 font-light">{text}</p>
  </div>
</div>