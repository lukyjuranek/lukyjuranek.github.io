---
import { getImage } from "astro:assets";
import coverImg from "../assets/img/cover-bw.jpg";
import Posthog from "../components/posthog.astro";

const optimizedCoverImage = await getImage({ src: coverImg });

const coverUrl = `url(${optimizedCoverImage.src})`;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Lukas Juranek - Data Science Student & Entrepreneur" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Posthog />
  </head>
  <body class="font-avenir">
    <slot />
    <footer class="py-8 px-4 text-center">
      <p class="text-gray-400 text-sm">Â© {new Date().getFullYear()} Lukas Juranek</p>
    </footer>
  </body>
</html>

<style is:global define:vars={{ coverUrl }}>
  html {
    scroll-behavior: smooth;
  }

  .font-avenir {
    /* font-family: "Avenir", "Avenir Next", "Avenir Next LT Pro", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; */
    font-family: sans-serif;
  }

  body {
    background-color: #000000;
    min-height: 100vh;
    image-rendering: -moz-crisp-edges; /* Firefox */
    image-rendering: -o-crisp-edges; /* Opera */
    image-rendering: -webkit-optimize-contrast; /* Webkit (non-standard naming) */
    image-rendering: crisp-edges;
    -ms-interpolation-mode: nearest-neighbor; /* IE (non-standard property) */
  }

  .header-with-cover {
    background-image:
      linear-gradient(to bottom, transparent 0%, transparent 60%, rgba(0, 0, 0, 1) 100%),
      radial-gradient(ellipse at center, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.8) 100%),
      radial-gradient(ellipse at center, rgba(30, 58, 138, 0.3) 0%, rgba(30, 58, 138, 0.5) 100%),
      var(--coverUrl);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    min-height: 50vh;
  }

  nav {
    position: relative;
  }

  @media (max-width: 767px) {
    #mobile-menu {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
    }
  }

  .project-card-shadow {
    /* box-shadow: 0 0 20px 10px rgba(255, 255, 255, 0.1); */
  }
  .bg-secondary {
    background-color: #191919;
  }
</style>
